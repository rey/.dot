[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[user]
  name = Rey Dhuny
  email = rey@me.com
#[push]
  #default = simple
[core]
  editor = /usr/bin/vim
  excludesfile = ~/.gitignore_global
[alias]
  bon = !sh ~/.dot/shell/gitbon.sh
  rey = !sh ~/.dot/shell/gitrey.sh
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  egg = format-patch -1
